<ButtonRoot>

    Button:
        id: button1
        text: "File 1"
        pos_hint: {'right': 0.99, 'y': 0.08}
        size_hint:[(root.width*0.2)/root.width, (root.height*0.06)/root.height]
        font_size: 20 if root.top > 400 else 12 if root.top > 200 else 15 if root.top > 100 else 10 if root.top > 30 else 5
        on_press: root.take_file(text1)

    Button:
        id: button2
        text: "File 2"
        pos_hint: {'right': 0.99, 'y': 0.01}
        size_hint:[(root.width*0.2)/root.width, (root.height*0.06)/root.height]
        font_size: 20 if root.top > 400 else 12 if root.top > 200 else 15 if root.top > 100 else 10 if root.top > 30 else 5
        on_press: root.take_file(text2)

    TextInput:
        id: text1
        pos_hint: {'x': 0.01, 'y': 0.08}
        size_hint: [(root.width*0.75)/root.width, (root.height*0.06)/root.height]

    TextInput:
        id: text2
        pos_hint: {'x': 0.01, 'y': 0.01}
        size_hint: [(root.width*0.75)/root.width, (root.height*0.06)/root.height]